@model IEnumerable<Bibilioteca_prestamos_EVWEB.Models.Editorial>

@{
    ViewBag.Title = "Index";
}

<h1 class="text-center">Lista de Editoriales</h1>
@if (int.Parse(Session["tipo"].ToString()) == 1)
{
    <div class="mb-2 text-end">
        <a href="/Editorial/Create/" class="btn btn-primary">Crear Nueva Editorial</a>
    </div>}

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Editorial</th>
                    @if (int.Parse(Session["tipo"].ToString()) == 1)
                    {
                        <th></th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.id_editorial</td>
                    <td>@item.Nombre</td>
                    @if (int.Parse(Session["tipo"].ToString()) == 1)
                    {
                        <td>
                            <a href="/Editorial/Edit/@item.id_editorial" class="btn btn-warning">EDITAR</a>
                            <a href="/Editorial/Delete/@item.id_editorial" class="btn btn-danger">ELIMINAR</a>
                        </td>
                    }
                    </tr>
                }
            </tbody>
        </table>
    </div>

