
@{
    ViewBag.Title = "Create";
}

<h2 class="text-center">Nuevo Ejemplar</h2>

<form method="post" class="needs-validation" novalidate>

    <div class="mb-3">
        <label class="form-label">Localización</label>
        <input type="text" name="Localizacion" class="form-control" required />
    </div>
  
    <div class="mb-3">
        <label class="form-label">Libro</label>
        @Html.DropDownList("id_libro", null, "--Seleccione--",
       htmlAttributes: new { @class = "form-control" })
    </div>
 
    <div class="mb-3 text-end">
        <a href="/Ejemplar/Index" class="btn btn-outline-primary">VOLVER</a>
        <input type="submit" value="GUARDAR" class="btn btn-success" />
    </div>
</form>
<script src="~/Scripts/validacion.js"></script>

